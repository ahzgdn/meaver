<html>
  <head>
    <title>Mevaer Camp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <%= stylesheet_link_tag 'font-awesome.min', 'main', 'noscript', 'application', :media => "all" %>

